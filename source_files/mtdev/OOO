pkgname="mtdev"
pkgver="1.1.7"
source="https://bitmath.org/code/mtdev/${pkgname}-${pkgver}.tar.bz2"
md5sum="483ed7fdf7c1e7b7375c05a62848cce7"

prepare() {
    downloaded_file=$(basename "${source}")
    tar -xf ${downloaded_file}
    cd ${pkgname}-${pkgver}
}

build() {
    ./configure --prefix=/usr --disable-static &&
    make
}

install() {
    make install
}

clean() {
    cd ..
    downloaded_file=$(basename "${source}")
    rm -Rf ${pkgname}-${pkgver}
    rm ${downloaded_file}
}