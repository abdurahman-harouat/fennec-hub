pkgname="xclock"
pkgver="1.1.1"
source="https://www.x.org/pub/individual/app/${pkgname}-${pkgver}.tar.xz"
md5sum="1273e3f4c85f1801be11a5247c382d07"

prepare() {
    downloaded_file=$(basename "${source}")
    tar -xf ${downloaded_file}
    cd ${pkgname}-${pkgver}
}

build() {
    ./configure $XORG_CONFIG &&
    make    
}

install() {
    make install
}

clean() {
    cd ..
    downloaded_file=$(basename "${source}")
    rm -Rf ${pkgname}-${pkgver}
    rm ${downloaded_file}
}