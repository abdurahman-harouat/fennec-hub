pkgname="xf86-input-evdev"
pkgver="2.10.6"
source="https://www.x.org/pub/individual/driver/${pkgname}-${pkgver}.tar.bz2"
md5sum="e8bd1edc6751f92e425cae7eba3c61eb"

prepare() {
    downloaded_file=$(basename "${source}")
    tar -xf ${downloaded_file}
    cd ${pkgname}-${pkgver}
}

build() {
    ./configure $XORG_CONFIG &&
    make
}

install() {
    make install
}

clean() {
    cd ..
    downloaded_file=$(basename "${source}")
    rm -Rf ${pkgname}-${pkgver}
    rm ${downloaded_file}
}